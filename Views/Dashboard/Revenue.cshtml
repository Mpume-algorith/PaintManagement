@model IEnumerable<PaintManagement.ViewModels.Revenue>
@{
    ViewBag.Title = "Revenue";
}

 <script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/Chart.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Revenue</h2>

<style>
    #chart_container {
        width: 400px;
        height: 400px;
        border: 1px solid #ddd;
        padding: 1px;
        border-radius: 4px;
    }
</style>
<body>
    <div id="chart_container">

        <canvas id="bar_chart"></canvas>
    </div>
    <script>
        var monthX_Axis = @Html.Raw(Json.Encode(ViewBag.MONTH));
        var revVolumeY_Axis = @Html.Raw(Json.Encode(ViewBag.orderVolume));

        var ctx = document.getElementById("bar_char").getContext("2d");
        var barChart = new Chart(ctx, {
            type: "bar",
            data: {
                labels: monthX_Axis,
                datasets: [{
                    label: "Revenue By Month",
                    data: revVolumeY_Axis,
                    backgroundColor: ["rgba(242,166,54,.5)", "rgba(145,65,72,.5)", "(74,25,92,.5)"],
                    borderColor: ["rgb(242, 166, 54)", "rgb(145, 65, 72)", "rgb(74, 25, 92)"],
                    borderWidth: 1
                }]
            },

            options: {
                maintainAspectRatio: false,
                scales: { xAxes: [{ ticks: { beginAtZero: true } } ] },
                legend: { display: false }
            },
        });
    </script>

</body>

