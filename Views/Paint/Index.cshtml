@model IEnumerable<PaintManagement.Models.Paint>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.ActionLink("PaintID", "Index", new { sortOrder = ViewBag.IDSortParm, currentFilter = ViewBag.CurrentFilter, style = "color:white" })
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, style = "color:white" })
        </th>
        <th>
            Cost Price
        </th>
        <th>
            Sale Price
        </th>
        <th>
            Size (ml/l)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.Image) <img src="~/Images/@item.ImagePath" alt="Image" height="150" width="150" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaintID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaintID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PaintID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaintID })
        </td>
    </tr>
}

</table>
