@model PagedList.IPagedList<PaintManagement.Models.Customer>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/Content/MyStyle.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewBag.Title = "Customers";
}

<img src="~/Images/285131_363979710352180_1850381867_n.jpg" style="width:80px;height:80px; float:right" />
<h2>Customers</h2>
<i class="fa fa-address-book fa-2x" style="font-size:50px; color:grey"></i>
<hr>

<p>
    @Html.ActionLink("Create New", "Create", null, new { style = "font-size:larger" })
</p>
@using (Html.BeginForm("Index", "Student", FormMethod.Get))
{
    <p>
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" name="Search" value="Search" />
        @Html.ActionLink("Clear", "Index", null, new { @class = "btn btn-default" })
    </p>
    <p> Click on Name to sort by Name</p>
    @Html.ActionLink("Print Customers","GeneratePDF")
}
<hr>
<div class="table-wrapper">
    <table class="table table-bordered">

        <tr>
            <th>
                CustomerID
            </th>

            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, style = "color:white" })
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID, style = "color:black" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CustomerID, style = "color:black" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID, style = "color:black" })
                </td>
            </tr>
        }

    </table>
</div>
<br />
<br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))


